<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Gamername</th>
    <th>Meetup</th>
    <th>City</th>
    <th>State</th>
    <th>Meetup url</th>
    <th>Avatar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.gamername %></td>
    <td><%= person.meetup_id %></td>
    <td><%= person.city %></td>
    <td><%= person.state %></td>
    <td><%= person.meetup_url %></td>
    <td><%= person.avatar %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

